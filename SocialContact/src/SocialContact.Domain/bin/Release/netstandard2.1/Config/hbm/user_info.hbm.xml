<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="false">
  <!-- start userinfo-->
  <class name="Domain.Core.UserInfo,Domain" table="user_info" discriminator-value="0">
    <id name="Id" column="id" unsaved-value="0">
      <generator class="increment" />
      <!-- unsaved-value used to be null and generator was increment in h2.0.3 -->
    </id>
    <property column="create_date" name="CreateDate" type="System.DateTime"/>
    <property column="update_date" name="UpdateDate" type="System.DateTime"/>
    <property column="account" name="Account"  length="15" type="System.String"/>
    <property  name="Password" column="password" length="20" type="System.String"/>
    <property  name="RealName" column="real_name" length="20" type="System.String" />
    <property  name="NickName" column="nick_name" length="20" type="System.String" />
    <many-to-one name="HeadPic"  column="head_pic_id" foreign-key="fk_head_pic_id" class="Domain.Core.UserFileInfo,Domain"/>
    <property  name="CardId" column="card_id" length="18" type="System.String" />
    <property  name="BankId" column="Bank_id" length="20" type="System.String" />
    <property  name="Birthday" column="birthday" type="System.DateTime" />
    <property  name="Phone" column="phone" length="11" type="System.String" />
    <property  name="Sex" column="sex" length="2" type="System.String" />
    <many-to-one name="Edution" column="edution_category_id" foreign-key="fk_edution_category_id"  class="Domain.Core.EdutionCategoryInfo,Domain"/>
    <many-to-one name="Marital"  column="marital_status_id" foreign-key="fk_marital_status_id" class="Domain.Core.MaritalStatusInfo,Domain"/>
    <property  name="Description" column="description" length="500" type="System.String" />
    <property  name="Email" column="email" length="30" type="System.String" />
    <many-to-one name="Status" column="user_status_id" foreign-key="fk_user_status_id"   class="Domain.Core.UserStatusInfo,Domain"/>
    <property  name="FailCount" column="fail_count" length="1" type="System.Int32" />
    <property  name="LoginIp" column="login_ip" length="12" type="System.String" />
    <many-to-one name="Level"  column="user_level_id" foreign-key="fk_user_level_id"  class="Domain.Core.UserLevelInfo,Domain"/>
    <property  name="LoginDate" column="login_date" type="System.DateTime" />
    <many-to-one name="CardPhoto1"  column="card_photo1" foreign-key="fk_card_photo1_id" class="Domain.Core.UserFileInfo,Domain"/>
    <many-to-one name="CardPhoto2"  column="card_photo2" foreign-key="fk_card_photo2_id" class="Domain.Core.UserFileInfo,Domain"/>
    <many-to-one name="HandCardPhoto1"  column="hand_card_photo1_id" foreign-key="fk_hand_card_photo1_id_id" class="Domain.Core.UserFileInfo,Domain"/>
    <many-to-one name="HandCardPhoto2"  column="hand_card_photo2_id" foreign-key="fk_hand_card_photo2_id" class="Domain.Core.UserFileInfo,Domain"/>
    <property  name="CardPhotoStatus" column="card_photo_status"  type="System.Boolean" />
    <!--<set name="Works"    inverse="true"  lazy="false"  cascade="all">
      <key column="user_id" foreign-key="fk_user_id"/>
      <one-to-many class="Domain.Core.WorkInfo,Domain"/>
    </set>
    <set name="Likes"  inverse="true"  lazy="false" cascade="all">
      <key column="user_id" foreign-key="fk_user_id"/>
      <one-to-many class="Domain.Core.LikeInfo,Domain"/>
    </set>
    <set name="Skills"  inverse="true" lazy="false" cascade="all">
      <key column="user_id" foreign-key="fk_user_id"/>
      <one-to-many class="Domain.Core.SkillInfo,Domain"/>
    </set>
    <set name="UserTags"   inverse="true" lazy="false"  cascade="all">
      <key column="user_id" foreign-key="fk_user_id"/>
      <one-to-many class="Domain.Core.UserTagInfo,Domain"/>
    </set>-->
  </class>
  <!-- end userinfo-->
</hibernate-mapping>