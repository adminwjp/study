<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="false">
  <!-- start job info -->
  <class name="Domain.Core.JobInfo,Domain"  table="job_category_info" discriminator-value="0">
    <id name="Id" column="id" unsaved-value="0">
      <generator class="increment" />
    </id>
    <property column="create_date" name="CreateDate" type="System.DateTime"/>
    <property column="update_date" name="UpdateDate" type="System.DateTime"/>
    <property  name="Name" column="name" length="20" type="System.String"/>
    <property  name="Description" column="description" length="500" type="System.String" />
    <many-to-one name="UserInfo"  column="user_id" foreign-key="fk_user_id"  class="Domain.Core.UserInfo,Domain"/>
    <many-to-one name="JobCategory"  column="job_category_id" foreign-key="fk_job_category_id"  class="Domain.Core.JobCategoryInfo,Domain"/>
  </class>
  <!-- end job info -->
</hibernate-mapping>